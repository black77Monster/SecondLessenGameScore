<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Счёт игры"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#1AAAA0"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00 : 00"
        android:layout_marginTop="30dp"
        android:textSize="100sp"
        android:textColor="#1AAAA0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/score">

        <Button
            android:id="@+id/foxTeam"
            android:layout_width="151dp"
            android:layout_height="122dp"
            android:layout_marginTop="5dp"
            android:backgroundTintColor="#AAAAA1"
            android:gravity="center"
            android:orientation="horizontal"
            android:text="команда лисы"
            android:textColor="#000000"
            tools:layout_editor_absoluteX="204dp"
            tools:layout_editor_absoluteY="298dp" />

        <Button
            android:id="@+id/crowTeam"
            android:layout_width="146dp"
            android:layout_height="119dp"
            android:layout_marginHorizontal="5dp"
            android:backgroundTintColor="#AFAF09"
            android:gravity="center"
            android:text="команда вороны"
            android:textColor="#090909"
            tools:layout_editor_absoluteX="44dp"
            tools:layout_editor_absoluteY="298dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>